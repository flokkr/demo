import:
  - path: common
  - path: hdfs
    transformations:
    - type: Add
      trigger:
        metadata:
          name: hdfs-config
      path:
        - data
      value:
         HDFS-SITE.XML_hadoop.user.group.static.mapping.overrides: hive=flokkr
         HDFS-SITE.XML_dfs.permissions.superusergroup: flokkr
         HDFS-SITE.XML_fs.permissions.umask-mode: "000"
  - path: hive
    transformations:
    - type: image
      image: elek/hive:3.1.2
    - type: copy-hadoop
      trigger:
         metadata:
            name: hive-hiveserver2
      image: flokkr/hadoop:3.1.2
      source: /opt/hadoop
  - path: postgres
  - path: yarn
    transformations: 
    - type: Add
      path: 
        - data
      value:
        YARN-SITE.XML_yarn.nodemanager.disk-health-checker.max-disk-utilization-per-disk-percentage: "99"
